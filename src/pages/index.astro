---
import { Image } from "astro:assets";
import AboutMe from "@/components/AboutMe.astro";
import CopyIcon from "@/components/Icons/CopyIcon.astro";
import Github from "@/components/Icons/GithubLogo.astro";
import KalanCard from "@/components/KalanCard.astro";
import LanguageGrid from "@/components/LanguageGrid.astro";
import Layout from "@/layouts/Layout.astro";
import Linkedin from "@/components/Icons/LinkedInLogo.astro";
import MyImage from "@/img/me.webp";
import ShortCommentsCard from "@/components/ShortCommentsCard.astro";
import SkillGrid from "@/components/SkillGrid.astro";
import Twitter from "@/components/Icons/TwitterLogo.astro";
import ToastComponent from "@/components/ToastComponent";
---

<Layout title="Portfolio Oficial De SAIDREXXX">
  <ToastComponent client:only="react" />
  <main class="mx-auto max-w-3xl px-5 mb-5 flex flex-col gap-10">
    <section class="flex flex-col gap-16">
      <article class="flex mt-10 gap-6 items-center justify-center">
        <div
          class="md:w-40 overflow-hidden rounded-full md:border-8 border-4 border-text1"
        >
          <Image src={MyImage} alt="Foto de Saidrexx" loading="eager" />
        </div>
        <div>
          <h1 class="font-Onest font-bold md:text-5xl text-4xl text-text2">
            What's Up!
          </h1>
          <span class="font-Onest font-bold text-2xl text-text2">I'm</span>
          <span class="font-Onest font-bold text-2xl text-primary"
            >Saidrexxx</span
          >

          <h3 class="font-Onest font-bold text-ls text-text2">
            Computer Systems Engineer
          </h3>

          <ul class="flex pt-2 items-center [&>li]:pr-4">
            <li>
              <a
                href="https://github.com/SAIDREXX"
                aria-label="Github Profile"
                target="_blank"
                rel="noreferrer noopener"
                ><Github
                  className="w-7 h-7 hover:transition hover:-translate-y-1 ease-in-out duration-300"
                  color="#456463"
                /></a
              >
            </li>
            <li>
              <a
                href="https://www.linkedin.com/in/saidrexxdemeneghi"
                aria-label="Linkedin Profile"
                target="_blank"
                rel="noreferrer noopener"
                ><Linkedin
                  className="hover:transition hover:-translate-y-1 ease-in-out duration-300"
                /></a
              >
            </li>
            <li>
              <a
                href="https://twitter.com/SAIDREXXX"
                aria-label="Twitter Profile"
                target="_blank"
                rel="noreferrer noopener"
                ><Twitter
                  className="hover:transition hover:-translate-y-1 ease-in-out duration-300"
                /></a
              >
            </li>
            <li>
              <button
                class="bg-primary_alt p-2 rounded-xl text-white font-Onest font-bold"
                aria-label="Download CV">Descargar CV</button
              >
            </li>
          </ul>
        </div>
      </article>
      <hr class="border-quaternary border-dashed bg-background3" />
      <h1 class="font-Onest font-bold text-2xl text-primary">
        Featured Project‚≠ê
      </h1>
      <section>
        <KalanCard />
      </section>
      <hr class="border-quaternary border-dashed" />
      <h1 class="font-Onest font-bold text-2xl text-primary">Top ProjectsüèÜ</h1>
      <section>
        <article class="md:grid md:grid-cols-2 md:gap-2">
          <ShortCommentsCard />
        </article>
      </section>
      <hr class="border-quaternary border-dashed" />
      <h1 class="font-Onest font-bold text-2xl text-primary">SkillsüéØ</h1>
      <section>
        <SkillGrid />
      </section>
      <h1 class="font-Onest font-bold text-2xl text-primary">About Meü¶ñ</h1>
      <section class="flex flex-col gap-2">
        <AboutMe />
        <LanguageGrid />
      </section>
      <hr class="border-quaternary border-dashed" />
      <div>
        <h1 class="font-Onest font-bold text-2xl text-primary">Contact Meüìß</h1>
        <div class="flex items-center gap-2">
          <button id="contact-button">
            <em>
              <small
                id="textToCopy"
                class="font-Onest font-medium text-tertiary_alt"
                >saidrexxdev@gmail.com</small
              ></em
            >
          </button>

          <div class="hidden duration-150 ease-in-out" id="svg">
            <CopyIcon className="w-4 h-4" />
          </div>
        </div>
      </div>

      <section></section>
      <hr class="border-quaternary border-dashed" />
    </section>
  </main>
</Layout>

<script>
  import { toast } from "sonner";
  document.getElementById("contact-button")?.addEventListener("click", () => {
    const textToCopy = document.getElementById("textToCopy")?.innerText;
    if (textToCopy) {
      navigator.clipboard.writeText(textToCopy);
      toast.success("Email Copiado al portapapeles");
    }
  });

  document
    .getElementById("contact-button")
    ?.addEventListener("mouseenter", () => {
      document.getElementById("svg")?.classList.remove("hidden");
    });

  document
    .getElementById("contact-button")
    ?.addEventListener("mouseleave", () => {
      document.getElementById("svg")?.classList.add("hidden");
      document
        .getElementById("contact-button")
        ?.classList.remove("animate-pulsing");
    });
</script>
